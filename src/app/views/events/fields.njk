<div class="item">
    <div>Nome do Cliente</div>
    <div>
        <input 
            type="text"
            name="client_name"
            value="{{ event.client_name }}"
        >
    </div>
</div>

<div class="item">
    <div>Endereço</div>
    <div>
        <input 
            type="text"
            name="address"
            value="{{ event.address }}"
        >
    </div>
</div>

<div class="detailsColumn">
    <div class="item">
        <div>Dia</div>
        <div>
            <input 
                type="date"
                name="date_event"
                value="{{ event.date_event }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Valor</div>
        <div>
            <input 
                type="text"
                name="cost"
                value="{{event.cost}}"
                onkeydown="Mask.apply(this,'formatBRL')"
            >
        </div>
    </div>
</div>

<div class="detailsColumn">
    <div class="item">
        <div>Tipo</div>
        <div>
            <input 
                type="text"
                name="category"
                placeholder="ex: casamento"
                value="{{event.category}}"
            >
        </div>

    </div>

    <div class="item">
        <div>Turno</div> 
        <div>
            <select name="shift">
                <option value="Manhã"
                    {% if event.shift == "Manhã" %} selected {% endif %}
                >
                    Manhã
                </option>

                <option value="Tarde"
                    {% if event.shift == "Tarde" %} selected {% endif %}
                >
                    Tarde
                </option>

                <option value="Noite"
                    {% if event.shift == "Noite" %} selected {% endif %}
                >
                    Noite
                </option>
            </select>
        </div>
    </div>
</div>


<h3> Escalados para o evento</h3>

<div id="employees_create" class="item">
    <div>Funcionários Escalados</div>
        <div class="employee">
        {% if Eventsemployees%}
            {% for Eventemployee in Eventsemployees%}
                    <select name="employee_id" class="espaceBottomShift">
                        {% for employee in employees%}
                                <option value="{{employee.id}}"
                                        {% if Eventemployee.employee_id == employee.id %} selected {% endif %}
                                >
                                    {{employee.name}}
                                </option>
                        {% endfor %}
                    </select>
            {% endfor %}
        {% else %}
            <select name="employee_id" class="espaceBottomShift">
                {% for employee in employees%}
                        <option value="{{employee.id}}"
                                {% if Eventemployee.employee_id == employee.id %} selected {% endif %}
                        >
                            {{employee.name}}
                        </option>
                {% endfor %}
            </select>
        {%endif%}
        </div>
</div>
<button type="button" class="add-employees">+ Mais Funcionários</button>

<div id="equipments_create"class="item espaceTopShift">
    <div>Equipamentos Escalados</div>
    <div class="equipment">
        {% if Eventsequipments %}
            {% for Eventequipment in Eventsequipments%}
                <select name="equipment_id" class="espaceBottomShift">
                    {%for equipment in equipments%}
                        <option value="{{equipment.id}}"
                            {% if Eventequipment.equipment_id == equipment.id %} selected {% endif %}}
                        >
                        {{equipment.name}} 
                        </option>
                    {%endfor%}
                </select>
            {% endfor %}
        {% else %}
            <select name="equipment_id" class="espaceBottomShift">
                {%for equipment in equipments%}
                    <option value="{{equipment.id}}"
                        {% if Eventequipment.equipment_id == equipment.id %} selected {% endif %}}
                    >
                    {{equipment.name}} 
                    </option>
                {%endfor%}
            </select>
        {% endif %}
    </div>
</div>
<button type="button" class="add-equipment">+ Mais Equipamentos</button>

<button type="submit">Salvar</button>

