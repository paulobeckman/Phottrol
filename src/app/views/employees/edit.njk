        <section class="details">
            <h3>Editar Funcionário</h3>

            {% include 'employees/fields.njk'%}
            
            <input 
                type="hidden"
                name="id"
                value="{{employee.id}}"
            >
        
    </form>
            
            <form class="details formDelete" method="POST" action="/employees?_method=DELETE">
                <input type="hidden" name="id" value="{{employee.id}}">
                <button type="submit">Deletar</button>
            </form>

        </section>

        {% include '../DeleteConfirm.njk'%}
{% endblock %}